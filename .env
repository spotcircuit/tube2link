# Application Configuration
NODE_ENV=development                           # development or production
NEXT_PUBLIC_BASE_URL="http://localhost:3000"  # Base URL for the application

# Docker Configuration (for containerization)
TARGET=development                            # development or runner (for Docker builds)
PORT=3000                                     # Application port

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION_ID="your-openai-org-id"
OPENAI_MODEL="gpt-4-turbo-preview"           # Specify OpenAI model to use

# YouTube API Configuration
NEXT_PUBLIC_YT_API_KEY="your-youtube-api-key"

# TinyMCE Editor Configuration
NEXT_PUBLIC_TINYMCE_API_KEY="your-tinymce-api-key"

# Session Configuration (if using session-based features)
SESSION_SECRET="complex_password_at_least_32_characters_long"

# Security
NEXT_TELEMETRY_DISABLED=1                    # Disable Next.js telemetry
